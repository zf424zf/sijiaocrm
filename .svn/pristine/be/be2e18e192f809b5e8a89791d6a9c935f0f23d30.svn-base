.pass {
	font-size: 40px;
    text-align: center;
    width: 43px;
    height: 43px;
	line-height: 43px;
    border: none;
	outline: none;
    border-left: 1px solid #b8b8b8;
    border-bottom: 1px solid #b8b8b8;
    border-top: 1px solid #b8b8b8;
    float: left;
    background: #fff;
}
.pass_left{
    border-top-left-radius: 5px;
	border-bottom-left-radius: 5px;
}
.pass_right{
	border-right:1px solid #b8b8b8;
    border-top-right-radius: 5px;
	border-bottom-right-radius: 5px;
}
.btn_number{
	width:33%;
}

.btn_next {
	margin-top: 30px;
	width: 100%;
	height: 40px;
	background: #0099FF;
}

.btn_next:hover {
	background: coral;
}

#password {
	font: 2em Verdana, Sans-Serif;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
}

#keyboard {
	margin: 0;
	padding: 0;
	list-style: none;
}

#keyboard li {
	float: left;
	width: 33%;
	height: 50px;
	line-height: 50px;
	text-align: center;
	background: #fff;
}
#keyboard li:nth-child(2),
#keyboard li:nth-child(5),
#keyboard li:nth-child(8),
#keyboard li:nth-child(11) {
	width: 34%;
}
#keyboard li span{
	display: block;
	color: #010101;
	font-size: 2.3rem;
	border-top: 1px solid #e3e5e7;
	border-right: 1px solid #e3e5e7;
}

#keyboard .tab {
	width: 33%;
}

#keyboard .cancle {
	width: 33%;
}

#keyboard .delete {
	width: 33%;
}
#keyboard .cancle span,
#keyboard .delete span{
	font-size: 1.7rem;
}

.on {
	display: none;
}

#keyboard li:hover {
    position: relative;
    border-color: #A8A8A8;
    background: #A8A8A8;
    cursor: pointer;
}

#key{
    position: absolute;
    background-color: #A8A8A8;
    width: 100%;
    bottom: 0px;
	z-index: 999;
}